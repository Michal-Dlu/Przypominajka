<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Przypominajka.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="LineBreakMode" Value="WordWrap"/>
                <Setter Property="TextColor" Value="DarkBlue"/>
                <Setter Property="FontSize" Value="14"/>
                

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
        Padding="30"
       BackgroundColor="Black">
            <Image
            Source="leki.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            
            />

            <Label
            Text="Przypominacz"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

            <Label
            Text="Przypomnę Ci o Twoich lekach"
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
            x:Name="CounterBtn"
            Text="Przejdź do drugiej strony" 
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnNavigateButtonClicked"
            HorizontalOptions="Fill" 
            TextColor="White"/>


            <VerticalStackLayout>
                <Label                
            Text="Lista leków"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"/>
                <CollectionView ItemsSource="{Binding LekiLabel.ItemsSource}"
                            x:Name="LekiLabel">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="15" HasShadow="True" Padding="10" Margin="5">
                                <Frame.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="AliceBlue" Offset="0" />
                                        <GradientStop Color="Green" Offset="1" />
                                    </LinearGradientBrush>
                                </Frame.Background>
                                <StackLayout>

                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="3"
                                 WidthRequest="500"   />
                                    <Label Text="{Binding GodzinyText}"  Style="{StaticResource LabelStyle}"
                                   HorizontalTextAlignment="Center" FontAttributes="Bold"  LineBreakMode="WordWrap"/>
                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="3"
                                  WidthRequest="500"/>
                                </StackLayout>

                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>



            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
